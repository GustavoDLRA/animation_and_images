<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gustavodelosriosalatorregmail.imagetesting.MainActivity"
    android:background="@drawable/fondo">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATCH!"
        android:id="@+id/pokebola1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/pokebola"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:typeface="normal"
        android:onClick="movehaxorus" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATCH!"
        android:id="@+id/pokebola2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/pokebola"
        android:textColor="#ffffff"
        android:enabled="false"
        android:visibility="invisible"
        android:onClick="fade" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET!"
        android:id="@+id/pokebola_reinicio"
        android:layout_alignBottom="@+id/pokebola1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/pokebola"
        android:textColor="#ffffff"
        android:enabled="false"
        android:visibility="invisible"
        android:onClick="resetImages" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entei"
        android:background="@drawable/Enteipng"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/haxorus"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/haxorussprite2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/togepi"
        android:background="@drawable/Togepi"
        android:layout_above="@+id/pokebola2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
